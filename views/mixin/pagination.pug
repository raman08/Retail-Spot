mixin pagination(currentPage, totalProducts, hasNextPage, hasPreviousPage, nextPage, previousPage, lastPage)
	section.pagination
				- currentPage = currentPage
				- totalProducts = totalProducts
				- hasNextPage = hasNextPage
				- hasPreviousPage = hasPreviousPage
				- nextPage = nextPage
				- previousPage = previousPage
				- lastPage = lastPage

				if currentPage != 1 && previousPage !=1
					a(href="?page=1") 1

				if hasPreviousPage
					a(href=`?page=${previousPage}`) #{previousPage}

				a(href=`?page=${currentPage}`, class='active') #{currentPage}

				if hasNextPage
					a(href=`?page=${nextPage}`) #{nextPage}

				if lastPage != currentPage && nextPage != lastPage
					a(href=`?page=${lastPage}`) #{lastPage}
